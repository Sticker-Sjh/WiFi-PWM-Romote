/* WXSS样式 */
.container {
  padding: 30rpx;
}

.time-display {
  font-size: 56rpx;
  text-align: center;
  margin: 40rpx 0;
  color: #333;
}

.add-btn {
  background-color: #007aff;
  color: white;
  margin-top: 30rpx;
}

.alarm-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.delete-btn {
  color: #ff3b30;
  font-size: 40rpx;
  padding: 0 20rpx;
  background: none;
}